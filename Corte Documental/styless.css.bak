/* Estilo base do sistema */
body {
    font-family: "Segoe UI", Arial, sans-serif; /* Fonte padrão do Windows/SharePoint */
    font-size: 14px; /* Tamanho confortável para leitura */
    margin: 0;
    padding: 0 0 20px 0;  
    background-color: #f4f6f9; /* Fundo neutro e claro */
    color: #333; /* Texto em tom escuro para contraste */
    line-height: 1.5; /* Espaçamento para melhorar leitura */
}

/* Estilo do cabeçalho */
#Cabeçalho {
    background-color: #ffffff;
    padding: 20px;
    text-align: center;
    border-bottom: 5px solid #ddd;
}

/* Estilo do título */
#Cabeçalho h1 {
    font-size: 20px;
    font-weight: bold;
    margin: 0 0 15px 0;
    color: #2c3e50;
}

/* Container de navegação */
#Cabeçalho .navegar {
    text-align: center; /* mantém os botões centralizados */
}

/* Estilo dos botões */
#Cabeçalho .navegar button {
    background-color: #3498db;
    color: white;
    font-size: 14px;
    font-weight: 500;
    border: none;
    border-radius: 6px;
    padding: 10px 18px;
    cursor: pointer;
    margin: 0 2px; /* separação lateral entre os botões */
    transition: background-color 0.3s ease;
}

/* Hover */
#Cabeçalho .navegar button:hover {
    background-color: #2980b9;
}

/* ===== FORMULÁRIOS PADRÃO ===== */

/* Containers dos formulários */
.formEntrada,
.formRelatorio {
    background-color: #fff;
    padding: 25px 35px;       /* mais espaço nas laterais */
    margin: 20px auto;
    border: 1px solid #ddd;
    border-radius: 8px;
    width: 70%;             /* aumentei a largura padrão */
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}

/* Títulos dos formulários */
.formEntrada h3,
.formRelatorio h3 {
    margin-top: 0;
    margin-bottom: 18px;
    font-size: 16px;
    font-weight: bold;
    color: #2c3e50;
    text-align: center;
}

/* Grupos de campos */
.formEntrada .form-group,
.formRelatorio .form-group {
    margin-bottom: 12px;  /* menos espaço entre cada grupo */
}

/* Labels */
.formEntrada label,
.formRelatorio label {
    display: block;
    margin-bottom: 3px;   /* bem colado ao input */
    font-size: 13px;
    font-weight: 500;
    color: #444;
}

/* Inputs */
.formEntrada input,
.formRelatorio input {
    width: 100%;
    padding: 8px 10px;
    font-size: 13px;
    border: 1px solid #ccc;
    border-radius: 6px;
    box-sizing: border-box;
    outline: none;
}

/* Efeito quando selecionado */
.formEntrada input:focus,
.formRelatorio input:focus {
    border-color: #3498db;
    box-shadow: 0 0 4px rgba(52,152,219,0.4);
}

/* Botões dentro dos formulários */
.formEntrada button,
.formRelatorio button {
    background-color: #3498db;
    color: #fff;
    font-size: 14px;
    font-weight: 500;
    border: none;
    border-radius: 6px;
    padding: 10px 18px;
    cursor: pointer;
    margin-top: 12px;
    width: 100%;
    transition: background-color 0.3s ease;
}

/* Hover */
.formEntrada button:hover,
.formRelatorio button:hover {
    background-color: #2980b9;
}

/* ===== SEÇÃO DE SAÍDA DE VEÍCULOS ===== */

/* Título da seção */
.saida h3 {
    margin-top: 0;
    margin-bottom: 18px;
    font-size: 16px;
    font-weight: bold;
    color: #2c3e50;
    text-align: center;
}

/* === ESTILO PADRÃO PARA TODAS AS TABELAS === */
table {
    width: 100%;
    border-collapse: collapse;
    margin: 20px auto;
    font-family: "Segoe UI", sans-serif;
    font-size: 13px;
    text-align: center;
    background-color: #fff;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    border-radius: 6px;
    overflow: hidden;
}

/* Cabeçalho da tabela - sem mudança no hover */
table th {
    background-color: #2c3e50; /* cor fixa */
    color: white;
    padding: 10px;
    text-align: center;
    font-size: 13px;
}

/* Impede qualquer alteração quando passar o mouse */
table th:hover {
    background-color: #2c3e50 !important;
    color: white !important;
    cursor: default; /* sem ícone de "link" */
}

/* Cabeçalho */
table thead tr, 
table tr:first-child {
    background-color: #2c3e50;
    color: white;
    font-weight: bold;
    font-size: 13px;
    letter-spacing: 0.5px;
}

/* Células */
table th, table td {
    padding: 8px 10px;
    border: 1px solid #ddd;
}

/* Linhas pares com cor diferente */
table tr:nth-child(even) {
    background-color: #f9f9f9;
}

/* Hover */
table tr:hover {
    background-color: #f1f7ff;
}

/* Botões dentro das tabelas */
table button {
    font-size: 12px;
    padding: 4px 2px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    margin: 1px;
    transition: background 0.2s ease;
}

/* Botão verde padrão */
.btn-verde {
    background-color: #28a745;
    color: #fff;
}
.btn-verde:hover {
    background-color: #218838;
}

/* Botão editar */
.btn-editar {
    background-color: #007bff;
    color: #fff;
}
.btn-editar:hover {
    background-color: #0069d9;
}

/* Botão bloquear */
.btn-bloquear {
    background-color: #dc3545;
    color: #fff;
}
.btn-bloquear:hover {
    background-color: #c82333;
}

/* Botão ticket */
.btn-ticket {
    background-color: #ffc107;
    color: #212529;
}
.btn-ticket:hover {
    background-color: #e0a800;
}

/* Botão informações */
.btn-informacoes {
    background-color: #17a2b8;
    color: #fff;
}
.btn-informacoes:hover {
    background-color: #138496;
}

/* Linha com bloqueio */
.bloqueio-sim {
    background-color: #ffe5e5 !important;
    color: #a60000;
    font-weight: bold;
}
#TabelaGestaoPatio table {
    font-size: 12px; /* menor que o padrão */
}
#TabelaGestaoPatio table th,
#TabelaGestaoPatio table td {
    padding: 2px 2px;
}

/* Inputs dentro da TabelaGestaoPatio */
#TabelaGestaoPatio table input {
    font-size: 12px;       /* mesma fonte da tabela */
    padding: 6px 8px;      /* reduzindo o espaço interno */
    width: 70%;            /* ocupa quase toda a célula */
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    text-align: center;
}

/* Foco no input */
#TabelaGestaoPatio table input:focus {
    border-color: #3498db;
    box-shadow: 0 0 3px rgba(52, 152, 219, 0.4);
    outline: none;
}
h3 {
    margin-top: 10PX;
    margin-bottom: 18px;
    font-size: 16px;
    font-weight: bold;
    color: #2c3e50;
    text-align: center;
}

/* Ajuste dos <select> dentro da TabelaGestaoPatio */
#TabelaGestaoPatio select {
    font-size: 12px;           /* acompanha fonte reduzida da tabela */
    padding: 6px 8px;          /* reduzido para não ficar desproporcional */
    border: 1px solid #ccc;    /* borda discreta */
    border-radius: 4px;        /* cantos arredondados */
    background-color: #fff;    /* fundo branco */
    color: #333;               /* texto cinza escuro */
    width: 120px;              /* largura fixa para alinhar */
    box-sizing: border-box;    /* largura inclui borda/padding */
}

/* Quando o select estiver em foco */
#TabelaGestaoPatio select:focus {
    outline: none;
    border-color: #2c3e50;     /* mesma cor do cabeçalho */
    box-shadow: 0 0 4px rgba(44, 62, 80, 0.5);
}
/*---------------- Relatório ----------------*/
#relatorio table {
    width: 100%;
    border-collapse: collapse;
    font-size: 12px;
    text-align: center;
}
#relatorio th, #relatorio td {
    border: 1px solid #ccc;
    padding: 4px;
}
#relatorio th {
    background-color: #131D29 !important;
    font-weight: bold;
}
#relatorio tr:nth-child(even) td { background-color: #f5f5f5; }

/* Botões */
#relatorio button {
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 4px;
    padding: 2px 6px;
    font-size: 10px;
    cursor: pointer;
}
#relatorio button:hover { background-color: #0056b3; }

/* Mapas de calor por faixa */
.atendido-baixo { background-color: #FA8072; color: #fff; font-weight: bold; border-radius: 4px; }       /* < 40% */
.atendido-baixo-medio { background-color: #ff944d; color: #fff; font-weight: bold; border-radius: 4px; } /* 41%-60% */
.atendido-medio { background-color: #ffd966; color: #000; font-weight: bold; border-radius: 4px; }      /* 61%-90% */
.atendido-alto { background-color: #a6d96a; color: #000; font-weight: bold; border-radius: 4px; }       /* 91%-99% */
.atendido-max { background-color: #33cc33; color: #fff; font-weight: bold; border-radius: 4px; }        /* >= 100% */

/*---------------- Detalhes ----------------*/
#detalhes table {
    width: 100%;
    border-collapse: collapse;
    font-size: 10px;
    text-align: center;
}
#detalhes th, #detalhes td {
    border: 1px solid #ccc;
    padding: 2px 4px;
}
#detalhes th { background-color: #131D29 !important; font-weight: bold; }
#detalhes tr:nth-child(even) td { background-color: #f5f5f5; }

